@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Testimonial Name</th>
        <th>Testimonial Title</th>
        <th>Testimonial Description</th>
        <th>Testimonial Image</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Image</td>
            <td><a class="btn mb-1 btn-rounded btn-outline-danger" asp-controller="Testimonial" asp-action="DeleteTestimonial" asp-route-id=@item.TestimonialID>Delete</a></td>
            <td><a class="btn mb-1 btn-rounded btn-outline-success" asp-controller="Testimonial" asp-action="UpdateTestimonial" asp-route-id=@item.TestimonialID>Update</a></td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Details</a></td>
        </tr>
    }
</table>

<a href="/Testimonial/AddTestimonial/" class="btn mb-1 btn-rounded btn-outline-info">Add New Testimonial</a>
