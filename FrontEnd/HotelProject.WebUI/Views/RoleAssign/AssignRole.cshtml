@model List<HotelProject.WebUI.Models.Role.RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h1>Assign Role</h1>
<br />
<form method="post">
    @for(int i=0; i<Model.Count; i++)
    {
        <div>
            <input type="hidden" asp-for="@Model[i].RoleID"/>
            <input type="hidden" asp-for="@Model[i].RoleName"/>
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="formform-check-input"/>
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
    }
    <br />
    <button class="btn btn-success">Update Roles for @ViewBag.userName</button>

</form>