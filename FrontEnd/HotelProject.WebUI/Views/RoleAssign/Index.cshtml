@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";

    int counter = 0;

    string inClassDefinationText = "";
    string statusDefination = "";
}

<h1>User List</h1>

<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>
                #
                Name Surname
            </th>
            <th>Assign Role</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status)
            {

                inClassDefinationText = "fa fa-circle-o text-success  mr-3";
                statusDefination = "Active";
            }
            else
            {

                inClassDefinationText = "fa fa-circle-o text-warning  mr-3";
                statusDefination = "Deactive";
            }
            counter++;
            <tr>
                <td>
                    <img src=@item.ImageUrl class=" rounded-circle mr-3" alt="">
                    @item.Name @item.Surname
                </td>
                <td><a asp-controller="RoleAssign" asp-action="AssignRole" asp-route-id=@item.Id class="btn btn-warning">Assign Role</a></td>


            </tr>

        }
    </tbody>
</table>
