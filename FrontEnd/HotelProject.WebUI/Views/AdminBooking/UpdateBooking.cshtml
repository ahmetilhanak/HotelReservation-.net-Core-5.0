@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}


<form method="post">

    <input type="hidden" asp-for="BookingID" class="form-control" hidden />
    <br />
    <label>Booking Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Email</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <br />
    <label>CheckIn Date</label>
    <input type="date" asp-for="CheckIn" class="form-control" />
    <br />
    <label>CheckOut Date</label>
    <input type="date" asp-for="CheckOut" class="form-control" />
    <br />
    <label>Adult Count</label>
    <input type="text" asp-for="AdultCount" class="form-control" />
    <br />
    <label>Child Count</label>
    <input type="text" asp-for="ChildCount" class="form-control" />
    <br />
    <label>Room Count</label>
    <input type="text" asp-for="RoomCount" class="form-control" />
    <br />
    <label>Special Requests</label>
    <input type="text" asp-for="SpecialRequests" class="form-control" />
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Status</label>
    <input type="text" asp-for="Status" class="form-control" />
    <br />
    <button class="btn btn-outline-success"> Update Booking </button>
</form>
