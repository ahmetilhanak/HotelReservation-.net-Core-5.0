@model HotelProject.WebUI.Models.Setting.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h1>Profil Bilgileri ve Şifre Güncelleme</h1>

<form method="post">
    <label>Your Name</label>
    <input type="text" class="form-control" asp-for="Name"/>
    <br />
    <label>Your Lastname</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />
    <label>Your User Name</label>
    <input type="text" class="form-control" asp-for="Username" readonly/>
    <br />
    <label>Your Email Address</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />
    <label>Your Password</label>
    <input type="password" class="form-control" asp-for="Password" />
    <br />
    <label>Confirm Your Password</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword" />
    <br />
    <button class="btn btn-success">Update Informations</button>
</form>