@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Surname</th>
        <th>City</th>
        <th>Delete</th>
        <th>Update</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a class="btn mb-1 btn-rounded btn-outline-danger" asp-controller="AdminGuest" asp-action="DeleteGuest" asp-route-id=@item.GuestID>Delete</a></td>
            <td><a class="btn mb-1 btn-rounded btn-outline-success" asp-controller="AdminGuest" asp-action="UpdateGuest" asp-route-id=@item.GuestID>Update</a></td>

        </tr>
    }
</table>

<a href="/AdminGuest/AddGuest/" class="btn mb-1 btn-rounded btn-outline-info">Add New Guest</a>
