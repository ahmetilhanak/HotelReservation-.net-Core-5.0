@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="ServiceID" class="form-control" hidden />
    <br />
    <label>Service Icon</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-info"></span>
    <br />
    <label>Service Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-info"></span>
    <br />
    <label>Service Description</label>
    <input type="text" asp-for="Desciption" class="form-control" />
    <span asp-validation-for="Desciption" class="text-info"></span>
    <br />
    <button class="btn btn-primary"> Update Service </button>
</form>


