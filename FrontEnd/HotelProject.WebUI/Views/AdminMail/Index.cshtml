@model AdminMailViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<form method="post">
    <label>Receiver Email Address</label>
    <input  type="text" class="form-control" asp-for="ReceiverMail"/>
    <br />
    <label>Subject</label>
    <input type="text" class="form-control" asp-for="Subject" />
    <br />
    <label>Your Message</label>
    <textarea class="form-control h-150px" rows="6" asp-for="Body"></textarea>
    <br />
    <button class="btn btn-primary" type="submit">Send</button>
</form>

